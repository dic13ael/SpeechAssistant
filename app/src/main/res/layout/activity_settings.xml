<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blueColor"

    tools:context="com.tnx097.speechassistant.SettingsActivity">


    <RelativeLayout
        android:id="@+id/settings1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kön"
            android:textSize="20dp"
            android:textStyle="bold" />
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:id="@+id/radio1"
            >
        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView"
            android:layout_marginTop="14dp"
            android:buttonTint="@color/TextColor"
            android:text="Man" />

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/radioButton2"
            android:buttonTint="@color/TextColor"
            android:text="Kvinna" />
        </RadioGroup>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/settings2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/settings1"
        android:padding="5dp">

        <TextView
            android:id="@+id/display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Display"
            android:textSize="20dp"
            android:textStyle="bold"
            />
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/display"
            android:id="@+id/radio2"
            >
        <RadioButton
            android:id="@+id/normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/display"
            android:text="Normal"
            android:buttonTint="@color/TextColor"
            />

        <RadioButton
            android:id="@+id/kontrast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/normal"
            android:text="Kontrast"
            android:buttonTint="@color/TextColor"
            />
        </RadioGroup>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/settings3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/settings2"
        android:padding="5dp">

        <TextView
            android:id="@+id/dialekt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:text="Dialekt"
            android:textSize="20dp"
            android:textStyle="bold" />
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dialekt"
            android:id="@+id/radio3"
            >
        <RadioButton
            android:id="@+id/skanska"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialekt"
            android:text="Skånska"
            android:buttonTint="@color/TextColor"
            />

        <RadioButton
            android:id="@+id/sh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/skanska"
            android:text="Stockholmska"
            android:buttonTint="@color/TextColor"
            />

        <RadioButton
            android:id="@+id/norr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sh"
            android:text="Norlänska"
            android:buttonTint="@color/TextColor"
            />

        <RadioButton
            android:id="@+id/gote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/norr"
            android:text="Göteborgska"
            android:buttonTint="@color/TextColor"
            />

        <RadioButton
            android:id="@+id/sma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gote"
            android:text="Smålänska"
            android:buttonTint="@color/TextColor"
            />

        <RadioButton
            android:id="@+id/got"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sma"
            android:text="Gotlänska"
            android:buttonTint="@color/TextColor"
            />
        </RadioGroup>
    </RelativeLayout>
</RelativeLayout>
